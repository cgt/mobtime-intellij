<idea-plugin>
    <id>name.cgt.mobtime-intellij</id>
    <name>Mobtime for IntelliJ</name>
    <vendor email="chris@cgt.name" url="https://cgt.name">Christoffer G. Thomsen</vendor>

    <description>A plugin to integrate mobti.me with IntelliJ.</description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
<!--        <statusBarWidgetFactory
                id="mystatusbarwidgetid"
                implementation="name.cgt.mobtimeintellij.MyStatusBarWidgetFactory" />-->
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="name.cgt.mobtimeintellij.MyAction"
                class="name.cgt.mobtimeintellij.MyAction"
                text="Do Something"
                description="Could be anything!">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>